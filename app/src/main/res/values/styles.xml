<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.MdcTypographyStyles.Headline" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MdcTypographyStyles.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="TextAppearance.MdcTypographyStyles.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

</resources>